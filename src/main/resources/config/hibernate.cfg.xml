<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
  "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
    <property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>
    <property name="show_sql">false</property>

    <!-- Entity mappings -->
    <mapping class="com.assemblyrobot.shared.db.model.RunDTO"/>
    <mapping class="com.assemblyrobot.shared.db.model.EngineDTO"/>
    <mapping class="com.assemblyrobot.shared.db.model.StageControllerDTO"/>
    <mapping class="com.assemblyrobot.shared.db.model.StationDTO"/>
    <mapping class="com.assemblyrobot.shared.db.model.MaterialDTO"/>
  </session-factory>
</hibernate-configuration>