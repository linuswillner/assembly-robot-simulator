<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
  "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
    <property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mariadb://localhost:3306/runs?createDatabaseIfNotExist=true</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">password</property>
    <property name="show_sql">false</property>

    <!-- Entity mappings -->
    <mapping class="com.assemblyrobot.shared.db.model.Run"/>
    <mapping class="com.assemblyrobot.shared.db.model.Engine"/>
    <mapping class="com.assemblyrobot.shared.db.model.StageController"/>
    <mapping class="com.assemblyrobot.shared.db.model.Station"/>
    <mapping class="com.assemblyrobot.shared.db.model.Material"/>
  </session-factory>
</hibernate-configuration>